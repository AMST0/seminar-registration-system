generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Admin user model for authentication
model Admin {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Seminar model - flexible design for future extensions
model Seminar {
  id          String   @id @default(cuid())
  slug        String   @unique
  title       String
  description String?
  date        DateTime
  time        String?
  location    String?
  
  // Background image for 9:16 mobile layout
  backgroundImage String?
  
  // Contact information
  contactPhone String?
  contactEmail String?
  contactWhatsapp String?
  
  // Status and limits
  isActive    Boolean  @default(true)
  maxCapacity Int?
  
  // Metadata - extensible JSON field for future needs
  metadata    String?  // JSON string for additional fields
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Relations
  registrations Registration[]
}

// Registration model for seminar attendees
model Registration {
  id        String   @id @default(cuid())
  
  // Required fields
  fullName  String
  phone     String
  email     String
  
  // Optional fields for future extensions
  notes     String?
  metadata  String?  // JSON string for additional data
  
  // Status tracking
  status    String   @default("pending") // pending, confirmed, cancelled
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relation to seminar
  seminarId String
  seminar   Seminar  @relation(fields: [seminarId], references: [id], onDelete: Cascade)
  
  // Unique constraint: same email can't register twice for same seminar
  @@unique([email, seminarId])
}
